---
import Coverage from './Coverage.astro';
import Map from './Map.astro';

import BlockedDrains from './content/blockedDrains/Primary.astro';
import BlockedDrainsLocalTemplate1 from './content/blockedDrains/localTemplates/1/Primary.astro';
import BlockedDrainsLocalTemplate2 from './content/blockedDrains/localTemplates/2/Primary.astro';

import CctvDrainSurveys from './content/cctvDrainSurveys/Primary.astro';
import CctvDrainSurveysLocalTemplate1 from './content/cctvDrainSurveys/localTemplates/1/Primary.astro';
import CctvDrainSurveysLocalTemplate2 from './content/cctvDrainSurveys/localTemplates/2/Primary.astro';

import DrainRepairs from './content/drainRepairs/Primary.astro';
import DrainRepairsLocalTemplate1 from './content/drainRepairs/localTemplates/1/Primary.astro';
import DrainRepairsLocalTemplate2 from './content/drainRepairs/localTemplates/2/Primary.astro';

import Soakaways from './content/soakaways/Primary.astro';
import SoakawaysLocalTemplate1 from './content/soakaways/localTemplates/1/Primary.astro';
import SoakawaysLocalTemplate2 from './content/soakaways/localTemplates/2/Primary.astro';
import SoakawaysLocalTemplate3 from './content/soakaways/localTemplates/3/Primary.astro';

import GutterCleaning from './content/gutterCleaning/Primary.astro';
import GutterCleaningLocalTemplate1 from './content/gutterCleaning/localTemplates/1/Primary.astro';
import GutterCleaningLocalTemplate2 from './content/gutterCleaning/localTemplates/2/Primary.astro';
import GutterCleaningLocalTemplate3 from './content/gutterCleaning/localTemplates/3/Primary.astro';

interface Props {
	locationSlug?: string;
	serviceSlug: string;
	localTemplateNumber: number;
	location: string;
	locationTel?: string;
}

const { locationSlug = '', serviceSlug, localTemplateNumber, location, locationTel } = Astro.props;

let Content: any = '<div></div>';

if (serviceSlug === 'blocked-drains') {
	if (!localTemplateNumber) Content = BlockedDrains;
	if (localTemplateNumber === 1) Content = BlockedDrainsLocalTemplate1;
	if (localTemplateNumber === 2) Content = BlockedDrainsLocalTemplate2;
}
if (serviceSlug === 'cctv-drain-surveys') {
	if (!localTemplateNumber) Content = CctvDrainSurveys;
	if (localTemplateNumber === 1) Content = CctvDrainSurveysLocalTemplate1;
	if (localTemplateNumber === 2) Content = CctvDrainSurveysLocalTemplate2;
}
if (serviceSlug === 'drain-repairs') {
	if (!localTemplateNumber) Content = DrainRepairs;
	if (localTemplateNumber === 1) Content = DrainRepairsLocalTemplate1;
	if (localTemplateNumber === 2) Content = DrainRepairsLocalTemplate2;
}
if (serviceSlug === 'soakaways-septic-tanks') {
	if (!localTemplateNumber) Content = Soakaways;
	if (localTemplateNumber === 1) Content = SoakawaysLocalTemplate1;
	if (localTemplateNumber === 2) Content = SoakawaysLocalTemplate2;
	if (localTemplateNumber === 3) Content = SoakawaysLocalTemplate3;
}
if (serviceSlug === 'gutter-cleaning') {
	if (!localTemplateNumber) Content = GutterCleaning;
	if (localTemplateNumber === 1) Content = GutterCleaningLocalTemplate1;
	if (localTemplateNumber === 2) Content = GutterCleaningLocalTemplate2;
	if (localTemplateNumber === 3) Content = GutterCleaningLocalTemplate3;
}
---

<main>
	<div class="inner-wrapper">
		<div class="row">
			<div class="text" data-template={localTemplateNumber}>
				<Content location={location} locationTel={locationTel} />
			</div>

			<aside>
				{locationSlug ? <Map locationSlug={locationSlug} /> : <Coverage />}
			</aside>
		</div>
	</div>
</main>

<style lang="scss">
	main {
		padding: var(--scale-32-64) 0;
	}

	.inner-wrapper {
		display: grid;
		gap: var(--scale-32-64);
	}

	.text {
		display: grid;
		gap: var(--scale-16-32);
		width: 100%;
	}

	aside {
		width: 100%;
	}

	.row {
		display: flex;
		gap: var(--scale-32-64);
		align-items: start;
		flex-direction: column;

		@media (min-width: 768px) {
			flex-direction: row;

			.text {
				width: 60%;
			}

			aside {
				width: 40%;
			}
		}
	}
</style>
